generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id           String   @id @default(uuid())
  name         String
  category     Category @default(fullstack)
  description  String?
  clientUrl    String?
  serverUrl    String?
  liveUrl      String?
  image        String?
  technologies String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("projects")
}

model Blog {
  id        String   @id @default(uuid())
  title     String
  content   String
  image     String?
  category  String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("blogs")
}

model Skill {
  id        String   @id @default(uuid())
  name      String
  icon      String?
  category  Category @default(frontend)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("skills")
}

enum Category {
  frontend
  backend
  fullstack
  database
}
